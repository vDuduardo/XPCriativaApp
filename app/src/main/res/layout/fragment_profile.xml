<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/viewBackground"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/custom_background2" />


        <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/nome"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewUserRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/role"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:layout_below="@+id/textViewUserName"
            android:layout_centerHorizontal="true"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewUserImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="42dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/john_snow"
            android:layout_below="@+id/textViewUserName"
            app:shapeAppearanceOverlay="@style/Circular"
            />

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/data"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_below="@+id/imageViewUserImage"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textViewSmallEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewInfo"
            android:layout_alignStart="@+id/textViewEmail"
            android:layout_alignEnd="@+id/textViewEmail"
            android:layout_marginStart="37dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="124dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/email2"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewInfo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/email"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/vector_email"
            android:elegantTextHeight="true"
            />

        <TextView
            android:id="@+id/textViewSmallPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewEmail"
            android:layout_alignStart="@+id/textViewPhone"
            android:layout_alignEnd="@+id/textViewPhone"
            android:layout_marginStart="37dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="44dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/phoneNumber2"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewEmail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/phoneNumber"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/vector_cellphone"
            android:elegantTextHeight="true"/>


    </RelativeLayout>


</FrameLayout>